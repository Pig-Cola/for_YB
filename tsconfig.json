{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/public/*"]
    },
    "jsx": "react-jsx",
    "types": ["vite/client"]
  }
}
